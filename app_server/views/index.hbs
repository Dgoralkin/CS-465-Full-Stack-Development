<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
  {{> head }}
  <body>
    <div id="background">
      <div id="page">
        <!-- Set handlebars to fetch HTML from ./partials/header.hbs -->
        {{> header }}
        <div id="contents">
          <div id="adbox">
            <img src="images/sea-sound.jpg" alt="Img" />
            <h1>{{content.heading}}</h1>
            <p>{{{content.heading_text}}}</p>
          </div>
          <div id="main">
            <div class="box">
              <div>
                <div>
                  <h3>{{content.Latest_Blog}}</h3>
                  <ul>
                    <!-- Render content from Blog_Entries in a loop -->
                    {{#each content.Blog_Entries}}
                    <li>
                      <h4><a href="{{link}}">{{this.title}}</a></h4>
                      <span>{{date}}</span>
                      <p>{{excerpt}}</p>
                    </li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>

            <div id="testimonials" class="box">
              <div>
                <div>
                  <h3>{{content.Testimonials_Heading}}</h3>
                  <!-- Render content from Testimonials in a loop -->
                  {{#each content.Testimonials}}
                  <p>
                    "{{text}}"
                    <span>- <a href="{{link}}">{{author}}</a></span>
                  </p>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
          <div id="sidebar">
            <div class="section">
              <a href="rooms"><img src="images/rooms.png" alt="Img" /></a>
            </div>
            <div class="section">
              <a href="travel"
                ><img src="images/dive-site.png" alt="Img"
              /></a>
            </div>
            <div class="section">
              <a href="meals"><img src="images/food.png" alt="Img" /></a>
            </div>
          </div>
        </div>
      </div>
    <!-- Set handlebars to fetch HTML from ./partials/header.hbs -->
    {{> footer }}
    </div>
  </body>
</html>
