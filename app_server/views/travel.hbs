<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
  <!-- Set handlebars to fetch HTML from ./partials/head.hbs -->
  {{> head }}
  <body>
    <div id="background">
      <div id="page">
        <!-- Set handlebars to fetch HTML from ./partials/header.hbs -->
        {{> header }}
        <div id="contents">
          <div class="box">
            <div>
              <div class="body">
                <h1>Travel</h1>
                <ul id="sites">
                  <!-- Loop to parse passed data through controllers res, from the trips.json file -->
                  {{#each trips}}
                  <li>
                    <a href="travel"><img src="images/{{this.image}}" alt="Img"/></a>
                    <h2><a href="travel">{{this.name}}</a></h2>
                    <p>
                      {{this.description}}
                    </p>
                    <p>
                      {{this.description_details}}
                    </p>
                  </li>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Set handlebars to fetch HTML from ./partials/header.hbs -->
      {{> footer }}
    </div>
  </body>
</html>
